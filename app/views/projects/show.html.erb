
<h1>Projects</h1>

<h1>(<%= @project.name %>) details</h1>
  <div class="show_project">
    <h4>Project Name: </h4><%= @project.name %> <br>
    <h4>Project Description:  </h4><%= @project.description %> <br>
    <h4>project Goal: </h4><%= @project.goal  %> <br>
    <h4>Project End-time: </h4>$<%= @project.deadline %> <br>
  </div>

  <%= link_to "Edit", edit_project_path(@project)  %> | <%= link_to "Delete", @project, method: :delete, data: {confirm: "Are you sure you want to delete this project?"} %>
